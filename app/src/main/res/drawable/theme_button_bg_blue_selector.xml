<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/default_theme_color_dark"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/default_text"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/default_theme_color"/>
        </shape>
    </item>
</selector>